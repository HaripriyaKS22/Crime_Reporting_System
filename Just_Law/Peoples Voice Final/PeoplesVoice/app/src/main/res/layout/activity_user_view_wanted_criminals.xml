        android:textColor="#000"
        android:textSize="20dp"
        android:text="Most Wanted Criminals" />

    <ListView
        android:id="@+id/lvcrminals"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>